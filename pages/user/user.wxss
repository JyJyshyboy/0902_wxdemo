page{
  background-color: #edece8;
}
.user_head{
  height: 45vh;
  position: relative;
}
.user_big{
  height: 50vh;
  filter: blur(12rpx);
}
.user_info{
  position: absolute;
  top: 30%;
  left: 40%;
  transform: translateX(-5%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_sma{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.user_info text{
  margin-top: 120rpx;
  color: #ffffff;
  font-size: 40rpx;
}
.user_btn{
  height: 45vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_login{
  font-size: 40rpx;
  border: 1rpx solid #1296db;
  padding: 20rpx;
}
.userContainer{
  
  position: relative;
}
.user_body{
  position: absolute;
  width: 90%;
  transform: translateX(5%);
  
}
.user_goods{
  display: flex;
  background-color: #ffffff;
}
.goods_item{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.num{
  color: #1296db;
}
.goods_item text{
  font-size: 27rpx;
}
.user_title{
  padding: 15rpx 10rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #edece8;
}
.user_order{
  display: flex;
  background-color: #ffffff;
  padding: 10rpx 0;
}
.user_order image{
  width: 60rpx;
  height: 60rpx;
}
.order_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order_item text{
  font-size: 27rpx;
}
.user_address{
  padding: 20rpx 10rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.user_contact{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #edece8;
}
.user_idea{
  padding: 20rpx 10rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #edece8;
}
.user_intr{
  padding: 20rpx 10rpx;
  background-color: #ffffff;
}
.user_share{
  padding: 20rpx 10rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.end{
  margin-top: 200rpx;
}