page{
  background-color: #eeeeee;
  padding: 10rpx;
}
.fb_title{
  padding: 10rpx;
}
.fb_tips{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.tips_item{
  width: 30%;
  background-color: #ffffff;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding: 10rpx 0;
}
.fb_textarea{
  padding: 10rpx;
  margin-top: 30rpx;
  background-color: #ffffff;
}
.fb_upimg{
  display: flex;
  background-color: #ffffff;
  padding: 0 0 10rpx 10rpx;
}
.fb_upimg button{
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  color: #cccccc;
  font-weight: 600;
}
.img_group image{
  width: 100rpx;
  height: 100rpx;
}
.choose_img{
  display: flex;
}
.img_group{
  position: relative;
  margin-left: 20rpx;
}
.img_group icon{
  position: absolute;
  transform: translateX(-50%);
}
.fb_btn button{
  width: 200rpx;
  height: 90rpx;
  margin: 0;
}
.fb_btn{
  display: flex;
  justify-content: flex-end;
}